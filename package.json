{
  "name": "linkmarry",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "start": "cross-env NODE_ENV=production node index.js",
    "dev": "node index.js",
    "build": "pnpm run build:client && pnpm run build:server && pnpm run copy-client",
    "build:dev": "pnpm run build:client && pnpm run build:server",
    "build:client": "vite build --outDir dist/client",
    "build:server": "vite build --ssr src/entry-server.tsx --outDir dist/server",
    "copy-client": "rm -rf public && mkdir -p public && cp -R dist/client/* public/",
    "preview": "cross-env NODE_ENV=development node index.js"
  },
  "dependencies": {
    "axios": "^1.7.9",
    "compression": "^1.8.1",
    "express": "^5.1.0",
    "lodash": "^4.17.21",
    "react": "^19.2.0",
    "react-beautiful-dnd": "^13.1.1",
    "react-colorful": "^5.6.1",
    "react-cookie": "^7.2.2",
    "react-dom": "^19.2.0",
    "react-helmet-async": "^2.0.5",
    "react-responsive": "^10.0.0",
    "react-router-dom": "^7.0.2",
    "sirv": "^3.0.2",
    "styled-components": "^6.1.13",
    "use-immer": "^0.11.0",
    "xlsx": "https://cdn.sheetjs.com/xlsx-0.20.3/xlsx-0.20.3.tgz"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/lodash": "^4.17.16",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-beautiful-dnd": "^13.1.8",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "babel-plugin-styled-components": "^2.1.4",
    "cross-env": "^10.0.0",
    "date-fns": "^4.1.0",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite": "^7.2.4"
  }
}
{
  "version": 2,
  "builds": [
    {
      "src": "index.js",
      "use": "@vercel/node@2.0.0",
      "config": {
        "includeFiles": [
          "index.js",
          "package.json",
          "node_modules/**",
          "dist/**/*",
          "src/**/*",
          "public/**/*"
        ]
      }
    }
  ],
  "buildCommand": "pnpm build",
  "outputDirectory": ".",
  "installCommand": "pnpm i",
  "devCommand": "pnpm dev",
  "routes": [
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "index.js"
    }
  ]
}
